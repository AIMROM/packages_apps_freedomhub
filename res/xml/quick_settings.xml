<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:settings="http://schemas.android.com/apk/res/com.android.settings" 
      android:title="@string/quick_qs_category"
      android:layout="@layout/tab" >
	
    <com.aim.freedomhub.preference.SystemSettingSwitchPreference
            android:key="status_bar_quick_qs_pulldown"
            android:title="@string/status_bar_quick_qs_pulldown" 
            android:defaultValue="true" />

<com.aim.freedomhub.preference.CustomSeekBarPreference
         android:key="qs_rows_portrait"
         android:title="@string/qs_rows_portrait_title"
         android:max="5"
         settings:min="1"
         settings:units="" />
 
     <com.aim.freedomhub.preference.CustomSeekBarPreference
         android:key="qs_rows_landscape"
         android:title="@string/qs_rows_landscape_title"
         android:max="3"
         settings:min="1"
         settings:units="" />
 
     <com.aim.freedomhub.preference.CustomSeekBarPreference
         android:key="qs_columns_portrait"
         android:title="@string/qs_columns_portrait_title"
         android:max="7"
         settings:min="1"
         settings:units="" />
 
     <com.aim.freedomhub.preference.CustomSeekBarPreference
         android:key="qs_columns_landscape"
         android:title="@string/qs_columns_landscape_title"
         android:max="9"
         settings:min="1"
         settings:units="" />
 	   
<com.aim.freedomhub.preference.SystemSettingSwitchPreference
             android:key="qs_tile_title_visibility"
             android:title="@string/qs_tile_title_visibility_title"
             android:defaultValue="true" />
	
<com.aim.freedomhub.preference.SystemSettingSwitchPreference
         android:key="qs_show_brightness_icon"
         android:title="@string/brightness_icon_title"
         android:summary="@string/brightness_icon_summary"
         android:defaultValue="false"/>

<com.aim.freedomhub.preference.SystemSettingSwitchPreference
         android:key="qs_footer_warnings"
         android:title="@string/qs_footer_warnings_title"
         android:summary="@string/qs_footer_warnings_summary"
         android:defaultValue="true" />
 	
<com.aim.freedomhub.preference.SystemSettingSwitchPreference
         android:key="less_boring_heads_up"
         android:title="@string/less_boring_heads_up_title"
         android:summary="@string/less_boring_heads_up_summary"
         android:defaultValue="true" />

    <com.aim.freedomhub.preference.SystemSettingSwitchPreference
        android:key="qs_quickbar_scroll_enabled"
        android:icon="@drawable/ic_gesture_swipe_left"
        android:title="@string/qqs_scroll_title" 
        android:summary="@string/qqs_scroll_summary"
        android:defaultValue="false"/>

</PreferenceScreen>
